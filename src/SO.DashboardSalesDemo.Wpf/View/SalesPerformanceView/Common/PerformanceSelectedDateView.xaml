<UserControl x:Class="SO.DashboardSalesDemo.Wpf.View.Common.PerformanceSelectedDateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:ViewModel="clr-namespace:SO.DashboardSalesDemo.Wpf.ViewModel"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignHeight="77" d:DesignWidth="424"
             d:DataContext="{dxmvvm:ViewModelSource ViewModel:PerformanceAreaChartViewModel}"
             x:Name="this">
    <Grid>
        <Border BorderThickness="1" Background="White" BorderBrush="#FFACACAC">
            <Border.Effect>
                <DropShadowEffect Direction="271" BlurRadius="0" Opacity="0.1" ShadowDepth="3" />
            </Border.Effect>
            <TextBlock Margin="7" Text="{Binding Path=SelectedDateString}" Foreground="{StaticResource ResourceKey=textBrush}" />
        </Border>
    </Grid>
</UserControl>